<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.chinapost.com.tinker.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:onClick="loadPatch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:onClick="view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="郑德赟!" />

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/image_view"
        android:layout_width="300dp"
        android:layout_height="300dp" />


    <EditText
        android:id="@+id/edit_text"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照!" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="sendBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送广播!" />

        <Button
            android:onClick="animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="属性动画!" />


    </LinearLayout>


    <Button
        android:onClick="jumpViewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转viewPager!" />

</LinearLayout>
